# ============================================
# 로컬 개발 환경 설정 (Infisical 미사용시)
# ============================================
# 이 파일을 .env.local로 복사하고 실제 값으로 변경하세요
# .env.local 파일은 Git에 커밋되지 않습니다

# 환경 설정
ENV=development
SPRING_PROFILES_ACTIVE=dev

# 데이터베이스 설정 (필수)
DB_HOST=localhost
DB_PORT=3308
DB_NAME=kb_mood_diary
DB_USER=kb_user
DB_PASSWORD=your_secure_db_password_here

# Redis 설정 (필수)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# JWT 설정 (필수 - 최소 32자 이상)
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long_here
JWT_EXPIRATION=86400000

# OAuth2 Google (필수 - Google Cloud Console에서 발급)
OAUTH2_GOOGLE_CLIENT_ID=your_google_client_id_here
OAUTH2_GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# OAuth2 Kakao (필수 - Kakao Developers에서 발급)
OAUTH2_KAKAO_CLIENT_ID=your_kakao_client_id_here
OAUTH2_KAKAO_CLIENT_SECRET=your_kakao_client_secret_here

# 애플리케이션 포트
SERVER_PORT=8090
FRONTEND_PORT=3000

# API URL
VITE_API_BASE_URL=http://localhost:8090

# 애플리케이션 정보
VITE_APP_TITLE=KB 감정 다이어리
VITE_APP_VERSION=1.0.0

# Infisical 설정 (선택사항 - Infisical 사용시만)
INFISICAL_ENABLED=false
INFISICAL_HOST=http://localhost:8080
INFISICAL_PROJECT_ID=
INFISICAL_BACKEND_TOKEN=
INFISICAL_FRONTEND_TOKEN=
